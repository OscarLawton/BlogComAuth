<% include ./partials/header %>
    <div class="container">

        <h1 class="display-4">edit blog</h1>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
            <label for="exampleInputTitle">Title</label>
            <input type="text" class="form-control" name="title" value="<%= blog.title %>">
            
            </div>
            <div class="form-group">
            <label for="exampleInputImage">Image</label>
            <input type="text" class="form-control" name="imgurl" value="<%= blog.imgurl %>">
            </div>
            <div class="form-group">
                <label for="exampleInputImage">Body</label>
                <textarea type="text" class="form-control" name="body" rows="3"><%= blog.body %></textarea>
            </div>
           
            
            <button class="btn btn-outline-primary" type="submit" >Submit</button>
        </form>
    </div>
<% include ./partials/footer %>