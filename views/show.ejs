<% include ./partials/header %>
<div class="show-container">
        <h1> <%= blog.title %> </h1>
        <img src="<%= blog.imgurl %> " class="img-fluid" alt="Smiley face" height="420" width="420">
                    
        <div class="text-area"><%= blog.body %> </div>
        <div class="myButtons">
            <a class="btn btn-warning btn-sm myEditBtn"  role="button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="btn-danger btn-sm myDeleteBtn">Delete</button>
            </form>
        </div>
        
        
    </div>
<% include ./partials/footer %>