<% include ./partials/header %>
<div class="card">
        <h1> <%= blog.title %> </h1>
        <img src="<%= blog.imgurl %> " class="img-fluid" alt="Smiley face" height="420" width="420">
                    
        <div class="text-area"><%= blog.body %> </div>
        <div class="myButtons">
            <a class="btn btn-warning btn-sm myEditBtn"  role="button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger btn-sm myDeleteBtn">Delete</button>
            </form>
            <a class="btn btn-primary btn-sm" href="/blogs/<%= blog._id %>/comment/new">Write Comment</a>
        </div>
           
</div>

<% blog.comments.forEach((comment) => { %>
    <div class="row">
        <div class="col-md-12">
            <strong><%= comment.author %></strong>
          
            <p><%= comment.text %></p>
        </div>
        
        
    </div>
    
    
<% }) %>
        
        

<% include ./partials/footer %>