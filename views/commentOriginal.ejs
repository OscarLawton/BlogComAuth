<div class="container">

    <h1 class="display-4">New Comment</h1>
    <form action="/blogs/<%= blog._id %>/comment" method="POST">
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="comment[author]" placeholder="Comment Author">
        </div>
        <div class="form-group">
            <label for="exampleInputImage">Comment</label>
            <textarea type="text" class="form-control" name="comment[text]" placeholder="Comment Text" rows="3"></textarea>
        </div>
       
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
    </form>
</div>